{
  "root": true,
  "extends": [
    "@react-native",
    "plugin:import/recommended",
    "plugin:@tanstack/query/recommended",
    /*Deve ser o Ãºltimo: Make sure to put it last, so it gets the chance to override other configs*/
    "prettier"
  ],
  "plugins": [
    "only-warn",
    "module-resolver",
    "@tanstack/query",
    "import"
  ],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts",
        ".tsx"
      ]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "import/order": [
          "error",
          {
            "groups": [
              "external",
              "builtin",
              "internal",
              "parent",
              "sibling"
            ],
            "pathGroups": [
              {
                "pattern": "react+(|-native)",
                "group": "external",
                "position": "before"
              },
              {
                "pattern": "@+(api|assets|routes|screens|components|hooks|theme|icons|domain|types|utils|infra|services)",
                "group": "internal",
                "position": "before"
              },
              {
                "pattern": "./",
                "group": "internal",
                "position": "before"
              }
            ],
            "pathGroupsExcludedImportTypes": [
              "react+(|-native)"
            ],
            "alphabetize": {
              "order": "asc",
              "caseInsensitive": true
            },
            "newlines-between": "always"
          }
        ]
      }
    },
    {
      // Test files only
      "files": ["**/__tests__/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)"],
      "extends": ["plugin:testing-library/react"]
    }
  ],
  "rules": {
    "import/no-unresolved": "error",
    "module-resolver/use-alias": "warn",
    "import/extensions": [
      "warn",
      "never"
    ],
    "react/react-in-jsx-scope": [
      "off"
    ],
    "react/jsx-curly-brace-presence": [
      "warn",
      "never"
    ],
    "jsx-quotes": [
      "warn",
      "prefer-single"
    ]
  }
}
